<div class="container">
    <h1 class="text-center "><%= @user.username %>'s profile</h1>
    <div class="text-center mt-4">
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-primary my-2" %>
        <%= link_to "Delete your account", user_path(@user), class: "btn btn-danger my-2",  data: { turbo_method: :delete, confirm: "Are you sure you want to delete your account?" }  %>
    </div>

    <h1 class="text-center ">Listed socks</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @user_socks.each do |sock| %>
        <div class="col">
            <div class="card shadow-sm">
            <%= image_tag sock.image, class: "bd-placeholder-img card-img-top", width: "100%", height: "225" %>
            <div class="card-body">
                <p class="card-text"><%=sock.title%></p>
                <p class="card-text">$<%=sock.price%></p>
                <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <%= link_to "View Sock", sock, class: "btn btn-sm btn-outline-secondary" %>
                </div>
                <small class="text-muted">listed by <%= sock.user.username if sock.user %></small>
                </div>
            </div>
            </div>
        </div>
        <% end %>
    </div>

    <h1 class="text-center ">Orders</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @user_orders.each do |order| %>
            <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="card-text">Order no: <%=order.id%></p>
                    <p class="card-text">Price: <%=order.price%></p>
                    <p class="card-text">Date: <%=order.created_at%></p>
                    <div class="btn-group">
                        <%= link_to "View Order", order, class: "btn btn-sm btn-outline-secondary" %>
                    </div>
                </div>
            </div>
            </div>
        <% end %>
    </div>
</div>